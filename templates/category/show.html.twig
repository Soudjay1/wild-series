{% extends 'base.html.twig' %}

{% block title %}All Category{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table category : </h1>

    {% for category in categories %}
        <div>
            <h2>  Série : {{ category.name }} - {{ category.id}} -  </h2>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('category_index') }}">
        Retour à la liste des categories
    </a>
{% endblock %}